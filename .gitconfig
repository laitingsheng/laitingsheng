[user]
	name = Tinson Lai
	email = laitingsheng@hotmail.com
[include]
	path = ~/.credentials/signkey.gitconfig
[init]
	defaultBranch = main
[commit]
	gpgsign = true
[tag]
	forceSignAnnotated = true
	gpgSign = true
[core]
	eol = lf
	autocrlf = false
	safecrlf = false
	ignoreCase = false
	symlinks = true
	filemode = true
	longpaths = true
[tar]
	umask = 0022
[push]
	default = current
	followTags = true
	gpgSign = if-asked
[pull]
	rebase = merges
[merge]
	directoryRenames = true
	renormalize = true
[diff]
	renames = copies
[fetch]
	prune = true
	pruneTags = true
	recurseSubmodules = true
[color]
	ui = always
[column]
	ui = auto
